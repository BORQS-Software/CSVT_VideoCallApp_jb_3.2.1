<?xml version="1.0" encoding="utf-8"?>
<!-- Call card hold call related information -->
<com.borqs.videocall.VTPanelCallCard	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:VTScreen="http://schemas.android.com/apk/res/com.borqs.videocall"	
	android:layout_width="wrap_content" 
	android:layout_height="fill_parent"
	android:orientation="vertical"	
	
    
    VTScreen:left_local="5dp"
    VTScreen:top_local="5dp"
    VTScreen:height_local="85dp"
    VTScreen:width_local="350dp"
    
    VTScreen:left_remote="5dp"
    VTScreen:top_remote="5dp"
    VTScreen:height_remote="85dp"
    VTScreen:width_remote="350dp"
    
    VTScreen:left_keypad_local="5dp"
    VTScreen:top_keypad_local="5dp"
    VTScreen:height_keypad_local="85dp"
    VTScreen:width_keypad_local="350dp"
    
    VTScreen:left_keypad_remote="5dp"
    VTScreen:top_keypad_remote="5dp"
    VTScreen:height_keypad_remote="85dp"
    VTScreen:width_keypad_remote="350dp"
    
    
    VTScreen:left_remote_only="200dp"
    VTScreen:top_remote_only="350dp" 
    VTScreen:height_remote_only="185dp"
    VTScreen:width_remote_only="300dp">
	

	
    <RelativeLayout android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	>
    	<TextView android:id="@+id/vt_card_title"
    		android:textSize="18dp" 
    		android:textColor="#ffffff"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		 
        android:layout_marginTop="10dp"/>
    	<!-- Name (or the phone number, if we don't have a name to display). -->
    	<TextView android:id="@+id/vt_name" 
			android:textSize="16dp"
    		android:textColor="#a6ffa2" 
    		android:layout_width="175dp"
    		android:layout_height="wrap_content" 
    		android:singleLine="true"
    		android:layout_marginTop="10dp" />
    	<TextView android:id="@+id/vt_phone_number" 
    		android:textSize="16dp"
    		android:textColor="#c0c0c0" 
    		android:layout_width="175dp"
    		android:layout_height="wrap_content" 
    		android:singleLine="true"
    		android:layout_marginTop="40dp" />
    	<ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/callcard_divider" 
        android:layout_marginTop="74dp">
    </ImageView>
    </RelativeLayout>

</com.borqs.videocall.VTPanelCallCard>
