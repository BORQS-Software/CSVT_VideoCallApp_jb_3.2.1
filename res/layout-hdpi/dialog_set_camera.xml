<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
 android:id="@+id/dialog_camera_ctl_group"
			android:layout_height="wrap_content"
			android:layout_width="345px" 
			android:orientation="vertical"
			android:paddingLeft="18px" 
			android:paddingRight="36px" 
			android:paddingTop="8px"
			android:paddingBottom="1px"
			android:gravity="center_horizontal">
			<LinearLayout android:id="@+id/dialog_contrast_ctl_group"
				android:layout_height="60px" 
				android:layout_width="fill_parent"
				android:orientation="horizontal"
				android:background="@drawable/float_buttons_bkg_selector"
				android:gravity="center_vertical">
				<ImageView android:id="@+id/dialog_btn_contrast"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:src="@drawable/cmcc_vtcall_icon_contrast"
					android:layout_marginLeft="6px" />
				<SeekBar android:id="@+id/dialog_contrast_val_seek"
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content"
					android:paddingLeft="22px"
					android:paddingRight="22px"
					android:max="150"
					android:progress="75" 
					/>
			</LinearLayout>
			<LinearLayout android:id="@+id/dialog_bright_ctl_group"
				android:layout_height="60px" 
				android:layout_width="fill_parent"
				android:layout_marginTop="3px" 
				android:orientation="horizontal"
				android:background="@drawable/float_buttons_bkg_selector"
				android:gravity="center_vertical">
				<ImageView android:id="@+id/dialog_btn_bright"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:src="@drawable/cmcc_vtcall_icon_bright"
					android:layout_marginLeft="10px" />
				<SeekBar android:id="@+id/dialog_bright_val_seek"
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content"
					android:paddingLeft="22px"
					android:paddingRight="22px"
					android:max="150"
					android:progress="75" />
			</LinearLayout>
			<LinearLayout android:id="@+id/screen_bright_ctl_group"
				android:layout_height="60px" 
				android:layout_width="fill_parent"
				android:layout_marginTop="3px" 
				android:orientation="horizontal"
				android:background="@drawable/float_buttons_bkg_selector"
				android:gravity="center_vertical">
				<ImageView android:id="@+id/btn_screen_bright"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:src="@drawable/cmcc_vtcall_icon_screen_bright"
					android:layout_marginLeft="10px" />
				<SeekBar android:id="@+id/screen_bright_val_seek"
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content"
					android:paddingLeft="22px"
					android:paddingRight="22px"
					android:max="150"
					android:progress="75"/>
			</LinearLayout>            
			<LinearLayout android:layout_height="wrap_content" 
							android:layout_width="wrap_content"
							android:gravity="center_horizontal">
					<Button android:id="@+id/dialog_btn_back"
							android:layout_width="120px"
							android:layout_height="60px"
							android:focusable="true"
							android:text="@string/set_back"
							android:layout_weight="1"
							android:textSize="16px" 
							android:gravity="center_horizontal|center_vertical"/>
			</LinearLayout>
</LinearLayout>
