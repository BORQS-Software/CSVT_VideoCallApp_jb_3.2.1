<?xml version="1.0" encoding="utf-8"?>
<com.borqs.videocall.VTPanelLocalWindow
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:VTScreen="http://schemas.android.com/apk/res/com.borqs.videocall"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:orientation="vertical"
	
	VTScreen:left_lock_connecting="230dp"
	VTScreen:top_lock_connecting="230dp"
	VTScreen:height_lock_connecting="80dp"
	VTScreen:width_lock_connecting="80dp"
	
	VTScreen:left_unlock_connecting="230dp"
	VTScreen:top_unlock_connecting="230dp"
	VTScreen:height_unlock_connecting="80dp"
	VTScreen:width_unlock_connecting="80dp" 
	
	VTScreen:left_local="4dp"
	VTScreen:top_local="75dp" 
	VTScreen:height_local="124dp"
	VTScreen:width_local="156dp" 
	
	VTScreen:left_remote="230dp"
	VTScreen:top_remote="230dp" 
	VTScreen:height_remote="80dp"
	VTScreen:width_remote="80dp" 
	
	VTScreen:left_keypad_local="4dp"
	VTScreen:top_keypad_local="75dp" 
	VTScreen:height_keypad_local="124dp"
	VTScreen:width_keypad_local="156dp"
	
	VTScreen:left_keypad_remote="230dp" 
	VTScreen:top_keypad_remote="230dp"
	VTScreen:height_keypad_remote="80dp"
	VTScreen:width_keypad_remote="80dp">	
	<FrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/frame_layout_local_win"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:padding="3dp"
		android:background="@drawable/cmcc_phone_vtcall_switch_video">		
	<TextureView android:id="@+id/_local_surface"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" />
	<ImageView android:id="@+id/surface_anim_photo"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:visibility="gone"/>	
					
	</FrameLayout>
</com.borqs.videocall.VTPanelLocalWindow>
